{
  "name": "@flasco/cheat-core",
  "version": "0.6.0",
  "main": "./dist/index.js",
  "author": "flasco",
  "license": "BSD 3-Clause",
  "private": true,
  "scripts": {
    "start": "node ./index.js",
    "ts:build": "tsc",
    "wda": "sh script/test.sh",
    "wda-init": "cd WebDriverAgent && ./Scripts/bootstrap.sh",
    "wda-clone": "git clone --depth=1 https://github.com/flasco/WebDriverAgent",
    "wda-update": "cd WebDriverAgent && git pull",
    "proxy": "iproxy 8100 8100",
    "screenshot": "node __test__/screenshot.test.js",
    "test": "jest --no-cache --forceExit --runInBand --detectOpenHandles"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "eslint",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**/*",
      ".eslint*.*"
    ]
  },
  "dependencies": {
    "@flasco/logger": "git+https://github.com/flasco/logger.git",
    "colors-cli": "^1.0.21",
    "date-fns": "^1.30.1",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@flasco/wda-driver": "git+https://github.com/flasco/wda-driver.git",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "opencv4nodejs": "^5.1.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$",
      "<rootDir>/node_modules/"
    ]
  },
  "peerDependencies": {
    "opencv4nodejs": ">=5.0.0"
  }
}
