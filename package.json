{
  "name": "@flasco/cheat-core",
  "version": "0.1.4",
  "main": "src/index.js",
  "author": "flasco",
  "license": "BSD 3-Clause",
  "private": true,
  "typings": "typings/index.d.ts",
  "scripts": {
    "start": "node ./index.js",
    "wda": "sh script/test.sh",
    "wda-init": "cd WebDriverAgent && ./Scripts/bootstrap.sh",
    "wda-clone": "git clone --depth=1 https://github.com/flasco/WebDriverAgent",
    "wda-update": "cd WebDriverAgent && git pull",
    "proxy": "iproxy 8100 8100",
    "screenshot": "node __test__/screenshot.test.js",
    "test": "jest --no-cache --forceExit --runInBand --detectOpenHandles"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "colors-cli": "^1.0.21",
    "date-fns": "^1.30.1",
    "opencv4nodejs": "^4.14.1"
  },
  "devDependencies": {
    "@flasco/wda-driver": "git+https://github.com/flasco/WDR.git",
    "eslint": "^5.6.0",
    "husky": "^1.0.0-rc.14",
    "jest": "23.6.0",
    "lint-staged": "^7.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$",
      "<rootDir>/node_modules/"
    ]
  }
}
